#!/bin/bash

# Check if data.json exists
if [ ! -f "data.json" ]; then
  echo "Error: data.json not found. Please run the fetch script first."
  exit 1
fi

# Extract values using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')   # Capitalize first letter
height=$(jq '.height' data.json | awk '{ printf "%.1f", $1 / 10 }')  # Convert dm to meters
weight=$(jq '.weight' data.json | awk '{ printf "%.0f", $1 / 10 }')  # Convert hg to kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize

# Print the formatted result
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
